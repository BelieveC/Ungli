<div id="page-wrapper">
		<div class="inner-content single">
				    <!--/music-right-->
				<div class="tittle-head">
							<h3 class="tittle"><%=@user.name %></h3>
							<div class="clearfix"> </div>
						</div>
				   <div class="single_left">
						<!--/video-main-->
						 <div class="video-main">
							<div class="video-record-list">
								<div id="jp_container_1" class="jp-video jp-video-270p" role="application" aria-label="media player">
									<div class="jp-type-playlist">
										<div id="jquery_jplayer_1" class="jp-jplayer" style="width: 480px; height: 270px;">
											<%=image_tag "play1",id:"jp_poster_0",style:"width: 480px; height: 270px; display: inline;" %>
										</div>
										<div class="jp-playlist">
											<ul style="display: block;">

												<% @user.stories.each do |story| %>
													<li><div><a href="javascript:;" class="jp-playlist-item-remove" style="display: none;">Ã—</a>
													<%=link_to story.name,story,class:"jp-playlist-item" %>
													</div></li>
												<% 	end %>
												</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- script for play-list -->
		<link href="css/jplayer.blue.monday.min.css" rel="stylesheet" type="text/css">
		</div>
		<div class="response">
			<h4>User Info</h4>
			<div class="media response-info">
				<div class="media-body response-text-right">
					<p>Age: <%= @user.age %></p>
					<p>Region: <%= @user.region %></p>
					<% if current_user.id == @user.id %>					
						<p><%= link_to "Edit Profile",edit_user_path(@user),class:"btn btn-success"%></p>
					<% end %>
						<div class="clearfix"> </div>
					</div>

				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="clearfix"> </div>
						<!--body wrapper end-->
</div>